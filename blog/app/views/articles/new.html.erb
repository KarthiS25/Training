<h1>New article</h1>
<% form_with model: @article do |form| %>
<%= form.label :title %>
<%= form.text_field :title %>
  <% @article.errors.full_messages_for(:title).each do |message| %>
    <div><%= message%></div>
  <% end %>
</div>

<div>
  <%= form.label :content %>
  <% form.text_area :content %>
  <% @article.errors.full_messages_for(:content).each do |message| %>
    <div><%= message%></div>
  <% end %>
</div>

<div>
  <%= form.submit %>
</div>

<% end %>